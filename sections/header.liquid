<script>
  document.querySelector('#menu-bar-control').addEventListener('click', function(){
    ShowMenu()
  })

  document.querySelector('#back').addEventListener('click', function(){
    CloseMenu()
  })

  document.querySelector('#close-menu-bar').addEventListener('click', function(){
    CloseMenu()
  })

  function CloseMenu(){
    document.querySelector('#menu-bar').classList.remove('translate-x-[50vw]', 'max-lg:translate-x-0');
    document.querySelector('#menu-bar').classList.add('translate-x-70px', 'max-lg:translate-x-100vw');
    document.querySelector('#back').classList.remove('block');
    document.querySelector('#back').classList.add('hidden');
  }

  function ShowMenu(){
    document.querySelector('#menu-bar').classList.remove('translate-x-70px', 'max-lg:translate-x-100vw');
    document.querySelector('#menu-bar').classList.add('translate-x-[50vw]', 'max-lg:translate-x-0');
    document.querySelector('#back').classList.remove('hidden');
    document.querySelector('#back').classList.add('block');
  }

  document.addEventListener('scroll', function(){
    var scroll = window.scrollY || document.documentElement.scrollTop;
    var percent = scroll / (document.body.offsetHeight - document.querySelector('#srcollTopBar').offsetHeight);
    var position = percent * (document.querySelector('#srcollTopBar').offsetHeight - document.getElementById('scroll-bar-ball').offsetHeight)
    // console.log(scroll * document.querySelector('#srcollTopBar').offsetHeight / document.body.offsetHeight - window.innerHeight);
  document.getElementById('scroll-bar-ball').style.top = `${position}px`
})
</script>


